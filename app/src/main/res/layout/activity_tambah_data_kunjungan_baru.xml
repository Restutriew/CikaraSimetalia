<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="10dp"
    android:focusableInTouchMode="true"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_md"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_backKunjungan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:fontFamily="@font/futura"
            android:text="@string/form_kunjungan_baru"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/futura"
            android:text="Data Subyektif"
            android:textColor="@color/pink"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <LinearLayout
            android:id="@+id/lyly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/textView8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Tanggal Kunjungan"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <com.santalu.maskara.widget.MaskEditText
                android:id="@+id/et_tambahKunjunganBaruTanggal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:fontFamily="@font/futura"
                android:hint="HH-BB-TTTT"
                android:inputType="number"
                android:padding="10dp"
                app:mask="__-__-____" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Keluhan Utama"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_tambahKunjunganBaruKeluhanUtama"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:fontFamily="@font/calibri"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Keluhan Tambahan"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_tambahKunjunganBaruKeluhanTambahan"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Riwayat Pernikahan"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_tambahKunjunganBaruRiwayatPernikahan"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:inputType="number"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Riwayat Penyakit"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_tambahKunjunganBaruRiwayatPenyakit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Riwayat Penyakit Keluarga"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_tambahKunjunganBaruRiwayatPenyakitKeluarga"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Riwayat Alergi"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_tambahKunjunganBaruRiwayaAlergi"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Jumlah Anak Hidup"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_tambahKunjunganBaruRiwayatAnakHidup"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:inputType="number"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Jumlah Anak Mati"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_tambahKunjunganBaruRiwayatAnakMati"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:inputType="number"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Jumlah Anak Lahir Prematur"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_tambahKunjunganBaruRiwayatAnakLahirPrematur"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:inputType="number"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Persalinan/Keguguran Terakhir"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <com.santalu.maskara.widget.MaskEditText
                android:id="@+id/et_tambahKunjunganBaruKeguguranTerakhir"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:fontFamily="@font/futura"
                android:text="00-00-0000"
                android:inputType="number"
                android:padding="10dp"
                app:mask="__-__-____" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Penolong Persalinan Terakhir"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/et_tambahKunjunganBaruPenolongPersalinanTerakhir"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_option"
                android:focusableInTouchMode="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Nama Penolong"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_tambahKunjunganBaruNamaPenolong"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Cara Persalinan Terakhir"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/et_tambahKunjunganBaruCaraPersalinanTerakhir"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_option"
                android:focusableInTouchMode="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Komplikasi"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_tambahKunjunganBaruKomplikasi"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Apakah Ber-KB Sebelum Hamil"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/et_tambahKunjunganBaruApakahBerKB"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_option"
                android:focusableInTouchMode="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Jenis Kontrasepsi"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_tambahKunjunganBaruJenisKontrasepsi"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Apakah Pernah Suntik TT"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/et_tambahKunjunganBaruSuntikTT"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_option"
                android:focusableInTouchMode="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Waktu Diberikan"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <com.santalu.maskara.widget.MaskEditText
                android:id="@+id/et_tambahKunjunganBaruWaktuDiberikan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:fontFamily="@font/futura"
                android:text="00-00-0000"
                android:inputType="number"
                android:padding="10dp"
                app:mask="__-__-____" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Gravida"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_tambahKunjunganBaruGravida"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:inputType="number"
                android:background="@drawable/input_bumil"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="HPHT"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <com.santalu.maskara.widget.MaskEditText
                android:id="@+id/et_tambahKunjunganBaruHPHT"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:fontFamily="@font/futura"
                android:text="00-00-0000"
                android:inputType="number"
                android:padding="10dp"
                app:mask="__-__-____" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Mulai Ada Gerakan Janin"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_tambahKunjunganBaruMulaiAdaGerakanJanin"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Lainnya"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_tambahKunjunganBaruLainnya"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/input_bumil"
                android:padding="10dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_tambahKunjunganBaru"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_green"
            android:fontFamily="@font/futura"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lyly">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_simpan_putih" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/futura"
                android:text="Simpan Data"
                android:textColor="@android:color/white" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>